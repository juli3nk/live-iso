; https://editorconfig.org/

root = true

[*]
charset = utf-8
# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
# Les espaces en fin de ligne ont une signification en Markdown (double espace = saut de ligne)

[{Makefile,*.mk}]
indent_style = tab
indent_size = 4

[*.sh]
indent_style = space
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4

[*.nix]
indent_style = space
indent_size = 2
